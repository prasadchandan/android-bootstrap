<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Bootstrap.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/pager_background</item>
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>

        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/lighter_blue</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/darker_blue</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets -->
        <item name="colorAccent">@color/accent</item>

    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="windowActionBar">false</item>
    </style>


    <style name="Widget.Styled.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>



</resources>